<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Blog Website</title>
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/new" class="new-post-btn">Create New Post</a>
    <div>
        <% posts.forEach(post => { %>
            <div>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <small><%= post.createdAt.toDateString() %></small>
            </div>
        <% }) %>
    </div>
</body>
</html>
